    }
    async function LoadToptopic() {
        const token=localStorage.getItem('token');
        try{
           const response= await fetch('/api/figure/toptopic',{
            method:'GET',
            headers:{ 
                                    'Content-Type': 'application/json',
                                   'Authorization': 'Bearer ' + token
                     },
           });
           const result= await response.json();
           console.log(result.data);
           if(result.success&&result.data)
           {
            const tbody=document.querySelector('.table-toptopic tbody');
            tbody.innerHTML=``;
            result.data.forEach(data => {
                const row = document.createElement('tr');
                row.innerHTML = `
                                    <td>${data.tende}</td>
                                    <td class="font-weight-bold">${data.luotthi}</td>
                                     <td class="font-weight-bold">${data.luottai}</td>
                                    <td class="font-weight-medium">
                                        <div class="badge badge-success">${data.tuongtac}</div>
                                    </td>
                `;
                tbody.appendChild(row);
                
            });

           }
        }
        catch (error)
        {
         console.error();
        }  
    }
